#include <stdio.h>

int lower_bound(int arr[], int size, int target) {
   
    int l = 0, r = size - 1, ans = size;
    while (l <= r) {
        int mid = (l + r) / 2;
        if (arr[mid] >= target) {
            ans = mid;
            r = mid - 1;
        } else {
            l = mid + 1;
        }
    }
    return ans;
}

int main() {
    int n;
    scanf("%d", &n);

    int arr[n], tail[n];
    for (int i = 0; i < n; i++){
        scanf("%d", &arr[i]);
    }
 
    int len = 0;
    for (int i = 0; i < n; i++) {
        int pos = lower_bound(tail, len, arr[i]);
        tail[pos] = arr[i];
        if (pos == len)
            len++;
    }

    printf("%d\n", len);
    return 0;
}
